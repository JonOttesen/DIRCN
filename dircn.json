{
    "name": "DIRCN for FastMRI",
    "n_gpu": 1,

    "arch": {
        "type": "DIRCN",
        "args": {}
    },
    "data_loader": {
        "type": "FastMRI",
        "args":{
            "data_dir": "./docs",
            "batch_size": 1,
            "shuffle": true,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 2e-3,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type": "MultiStepLR",
        "args": {
            "milestones": [60, 90],
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 20,
        "iterative": true,
        "iterations": 120,
        "images_pr_iteration": 20000,
        "val_images_pr_iteration": 5000,
        "save_dir": "/itf-fi-ml/home/jonakri/fMRI/DIRCN",
        "save_period": 10,
        "early_stop": 10

    }
}
