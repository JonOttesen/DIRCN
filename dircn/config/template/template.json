{
    "name": "FastMRI_Unet",
    "n_gpu": 1,

    "arch": {
        "type": "UNet",
        "args": {}
    },
    "data_loader": {
        "type": "FastMRI",
        "args":{
            "data_dir": "./docs",
            "batch_size": 8,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-5,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 500,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 20,
        "iterative": true,
        "iterations": 50,
        "images_pr_iteration": 4000,
        "val_images_pr_iteration": 1000,
        "save_dir": "where/to/dave/checkpoints",
        "save_period": 5,
        "early_stop": 10

    }
}
